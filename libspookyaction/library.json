{
  "name": "libSpookyAction",
  "version": "1.0.1",
  "description": "A library for interfacing with Desfire tags through a PN532",
  "license": "LGPL-3.0-only",
  "keywords": [
    "desfire",
    "mifare",
    "pn532",
    "nfc",
    "rfid"
  ],
  "homepage": "https://proj.mittelab.dev/libspookyaction/",
  "repository": {
    "type": "git",
    "url": "https://git.mittelab.org/proj/libspookyaction.git"
  },
  "export": {
    "include": [
      "src/*",
      "include/*",
      "examples/*"
    ]
  },
  "examples": [
    {
      "name": "Initialize PN532",
      "base": "examples",
      "files": [
        "initialize.cpp",
        "sdkconfig.defaults",
        "platformio.ini"
      ]
    },
    {
      "name": "PN532 Self test",
      "base": "examples",
      "files": [
        "self_test.cpp",
        "sdkconfig.defaults",
        "platformio.ini"
      ]
    },
    {
      "name": "Scans any tag and prints type",
      "base": "examples",
      "files": [
        "scan_any_target.cpp",
        "sdkconfig.defaults",
        "platformio.ini"
      ]
    },
    {
      "name": "Scans specific tags and prints UUID",
      "base": "examples",
      "files": [
        "scan_desfire.cpp",
        "sdkconfig.defaults",
        "platformio.ini"
      ]
    }
  ],
  "authors": [
    {
      "name": "Pietro Saccardi",
      "email": "lizardm4@gmail.com",
      "maintainer": true
    },
    {
      "name": "Luca Cristaldi",
      "email": "wifasoi@gmail.com",
      "maintainer": true
    }
  ],
  "frameworks": "espidf",
  "platforms": "espressif32",
  "flags": [
    "-std=gnu++17",
    "-Wall",
    "-Wextra"
  ],
  "unflags": [
    "-std=gnu++11",
    "-std=gnu++14",
    "-std=c++11",
    "-std=c++14",
    "-std=c++17"
  ],
  "dependencies": {
    "mitteLib": "https://git.mittelab.org/proj/mittelib.git"
  }
}
