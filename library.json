{
    "name": "libSpookyAction",
    "version": "1.0.0",
    "description": "A library for interfacing with Desfire tags through a PN532",
    "license": "LGPL-3.0-only",
    "keywords": ["desfire", "mifare", "pn532", "nfc", "rfid"],
    "homepage": "https://proj.mittelab.dev/libspookyaction/",
    "repository": {
        "type": "git",
        "url": "https://git.mittelab.org/proj/libspookyaction.git"
    },
    "export": {
        "include": [
            "src/*",
            "include/*",
            "examples/*"
        ],
        "exclude": [
            "src/test/*",
            "src/unittest_transport.h"
        ]
    },
    "examples": [
        {
            "name": "Initialize pn532",
            "base": "examples",
            "files": ["initialize.cpp"]
        },
        {
            "name": "read tag UUID",
            "base": "examples",
            "files": ["select_tag.cpp"]
        },
        {
            "name": "reader selftest",
            "base": "examples",
            "files": ["selftest.cpp"]
        }
    ],
    "authors": [
        {
            "name": "Pietro Saccardi",
            "email": "lizardm4@gmail.com",
            "maintainer": true
        },
        {
            "name": "Luca Cristaldi",
            "email": "wifasoi@gmail.com",
            "maintainer": true
        }
    ],
    "frameworks": "espidf",
    "platforms": "espressif32",
    "flags": ["-std=gnu++17", "-Wall", "-Wextra", "-D CONFIG_MBEDTLS_DES_C"],
    "unflags": ["-std=gnu++11", "-std=gnu++14", "-std=c++11", "-std=c++14", "-std=c++17"],
    "dependencies": {
        "mitteLib": "https://git.mittelab.org/proj/mittelib.git"
    }
}
